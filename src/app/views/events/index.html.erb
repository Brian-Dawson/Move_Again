<h1>Listing events</h1>
<%-# Index page for the events -%>
<%-# Lists the various attributes of each event and then the Show, Edit, and Delete Buttons for each event -%>

<% if current_user && current_user.admin %>
<%= link_to 'New Event', new_event_path %>
<% end %>
<table class = "table table-striped">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Location</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Date</th>
  </tr>

  <% @events.each do |event| %>
    <tr>
      <td><%= event.title %></td>
      <td><%= event.description %></td>
      <td><%= event.location %></td>
      <td><%= event.start_time %></td>
      <td><%= event.end_time %></td>
      <td><%= event.date %></td>
      <td><%= link_to 'Show', event_path(event) %></td>
      <% if current_user && current_user.admin %>
      <td><%= link_to 'Edit Event', edit_event_path(event) %></td>
      <td><%= link_to 'Destroy', event_path(event),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
        <% end %>
    </tr>
  <% end %>
</table>
